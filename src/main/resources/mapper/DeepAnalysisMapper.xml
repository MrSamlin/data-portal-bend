<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.portal.mapper.DeepAnalysisMapper">
    <resultMap id="DeepAnalysisResultMap" type="com.example.portal.entity.DeepAnalysis">
        <id column="id" property="id"/>
        <result column="analysis_dimension" property="analysisDimension"/>
        <result column="jump_url" property="jumpUrl"/>
        <result column="view_count" property="viewCount"/>
        <result column="status" property="status"/>
        <result column="publish_date" property="publishDate"/>
        <result column="create_date" property="createDate"/>
        <result column="update_date" property="updateDate"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
        <result column="theme_code" property="themeCode"/>
    </resultMap>

    <select id="selectAll"   resultMap="DeepAnalysisResultMap">
        SELECT id, analysis_dimension, jump_url, view_count, status, publish_date,
        create_date, update_date, create_user, update_user,theme_code FROM deep_analysis
        <where>
            1=1
            <if test="analysisDimension != null and analysisDimension != ''">
                AND analysis_dimension LIKE CONCAT('%', #{analysisDimension}, '%')
            </if>
        </where>
        ORDER BY create_date DESC
        LIMIT   #{size} OFFSET   #{currentPage}
    </select>


    <select id="countAll"   resultType="java.lang.Integer">
        SELECT  COUNT(*) FROM deep_analysis
        <where>
            1=1
            <if test="analysisDimension != null and analysisDimension != ''">
                AND analysis_dimension LIKE CONCAT('%', #{analysisDimension}, '%')
            </if>
        </where>
    </select>
</mapper>
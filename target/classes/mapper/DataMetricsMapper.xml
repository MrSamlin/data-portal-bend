<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cmfchina.dataportal.mapper.DataMetricsMapper">
    <resultMap id="MetricsResultMap" type="com.cmfchina.dataportal.entity.Metrics">
        <id property="id" column="id"/>
        <result property="metricsCode" column="metrics_code"/>
        <result property="metricName" column="metric_name"/>
        <result property="metricType" column="metric_type"/>
        <result property="parentId" column="parent_id"/>
        <result property="createUser" column="create_user"/>
        <result property="updateUser" column="update_user"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
        <result column="category_name" property="categoryName"/>
        <result column="theme_code" property="themeCode"/>
        <result column="display_order" property="displayOrder"/>
        <result column="tag" property="tag"/>
        <result column="is_Visible" property="isVisible"/>
        <result column="data_source" property="dataSource"/>
        <result column="indicator_code" property="indicatorCode"/>
    </resultMap>

    <select id="selectAll"  resultMap="MetricsResultMap">
        SELECT  *
        FROM data_metrics
        <where>
            1=1
            <if test="metricName != null and metricName != ''">
                AND metric_name LIKE CONCAT('%', #{metricName}, '%')
            </if>
        </where>
        ORDER BY create_date DESC
        LIMIT #{size} OFFSET  #{currentPage}
    </select>

    <select id="countAll"  resultType="java.lang.Integer">
        SELECT  count(*) FROM data_metrics
        <where>
            1=1
            <if test="metricsName != null and metricsName != ''">
                AND metric_name LIKE CONCAT('%', #{metricsName}, '%')
            </if>
        </where>
    </select>


    <select id="getMetricsTopList"  resultMap="MetricsResultMap">
        SELECT  *
        FROM data_metrics
        <where>
            is_Visible =1
            <if test="themeCode != null and themeCode != ''">
                AND theme_code   = #{themeCode}
            </if>
        </where>
        ORDER BY create_date DESC
        LIMIT  4 OFFSET  0
    </select>



    <select id="getMetricsDataByMetricType"  resultMap="MetricsResultMap">
        SELECT  *
        FROM data_metrics
        <where>
            metric_type = #{metricType}
            <if test="themeCode != null and themeCode != ''">
                AND theme_code   = #{themeCode}
            </if>
        </where>
        ORDER BY create_date DESC
    </select>

</mapper>